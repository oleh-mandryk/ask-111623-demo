		{
			"name": "Sign In",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Validate user email\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.user.email).to.eql(\"oleh.mandryk+3@gmail.com\");\r",
							"});\r",
							"\r",
							"pm.test(\"User role validation\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.user.role).to.eql(\"TEACHER\");\r",
							"});\r",
							"\r",
							"pm.test(\"Set Token\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.environment.set(\"teacherToken\", jsonData.token);\r",
							"});\r",
							"\r",
							"pm.test(\"Set TeacherId\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.environment.set(\"teacherId\", jsonData.user.id);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
